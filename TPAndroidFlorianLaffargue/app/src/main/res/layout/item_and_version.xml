<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_width"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pizzaImg"
        android:layout_width="@dimen/common_width"
        android:layout_height="@dimen/common_width"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/pizzaTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/pizzaImg"
        android:layout_marginLeft="@dimen/margin_base"
        android:layout_marginTop="@dimen/margin_base"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/font_base"
    />

    <TextView
        android:id="@+id/pizzaIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pizzaTxt"
        app:layout_constraintLeft_toLeftOf="@id/pizzaTxt"
        />

</androidx.constraintlayout.widget.ConstraintLayout>